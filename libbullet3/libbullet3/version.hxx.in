#pragma once

// The numeric version format is AAABBBCCCDDDE where:
//
// AAA - major version number
// BBB - minor version number
// CCC - bugfix version number
// DDD - alpha / beta (DDD + 500) version number
// E   - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAABBBCCC. For example:
//
// Version      AAABBBCCCDDDE
//
// 0.1.0        0000010000000
// 0.1.2        0000010010000
// 1.2.3        0010020030000
// 2.2.0-a.1    0020019990010
// 3.0.0-b.2    0029999995020
// 2.2.0-a.1.z  0020019990011
//
#define LIBBULLET3_VERSION       $libbullet3.version.project_number$ULL
#define LIBBULLET3_VERSION_STR   "$libbullet3.version.project$"
#define LIBBULLET3_VERSION_ID    "$libbullet3.version.project_id$"

#define LIBBULLET3_VERSION_MAJOR $libbullet3.version.major$
#define LIBBULLET3_VERSION_MINOR $libbullet3.version.minor$
#define LIBBULLET3_VERSION_PATCH $libbullet3.version.patch$

#define LIBBULLET3_PRE_RELEASE   $libbullet3.version.pre_release$

#define LIBBULLET3_SNAPSHOT_SN   $libbullet3.version.snapshot_sn$ULL
#define LIBBULLET3_SNAPSHOT_ID   "$libbullet3.version.snapshot_id$"
